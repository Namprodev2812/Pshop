<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

        <RelativeLayout
            android:padding="10dp"
            android:id="@+id/view_background"
            android:background="#ef300e"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_delete"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/touch_delete"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/linear_item"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fdfbfb"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:id="@+id/image_item_recycler_pay"
                android:src="@drawable/ic_light"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1" />

            <LinearLayout

                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/title_item_recycler_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đèn ốp trần hình khối"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/price_item_recycler_pay"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đơn giá: 100.000 VNĐ"
                    />
                <TextView
                    android:id="@+id/sum_item_recycler_pay"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng: 0"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp">

                    <TextView
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"
                        android:id="@+id/value_item_recycler_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        />

            </RelativeLayout>

        </LinearLayout>

</FrameLayout>
