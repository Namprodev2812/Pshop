<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linear_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fdfbfb"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/image_item_recycler_donhangfull"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/ic_light" />

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/title_item_recycler_donhangfull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đèn ốp trần hình khối"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/price_item_recycler_donhangfull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Đơn giá: 100.000 VNĐ" />

            <TextView
                android:id="@+id/sum_item_recycler_donhangfull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tổng: 0" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1">

            <TextView
                android:layout_above="@+id/value_item_recycler_donhangfull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Số sản phẩm"
                />

            <TextView
                android:id="@+id/value_item_recycler_donhangfull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="0"
                android:textSize="30sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>