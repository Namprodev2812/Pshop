<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:background="#88c7ff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/menu_mypay_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#88c7ff"
                android:src="@drawable/chevron_left"></ImageView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center"
                android:text="Thanh toán"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_margin="5dp"
        android:id="@+id/profile_pay"
        android:layout_below="@+id/toolbar_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:textColor="#4c504f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textStyle="bold"
                android:text="Địa chỉ nhận hàng"
                />
            <TextView
                android:id="@+id/nameuser_mobile_mypay"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:textColor="#4c504f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textStyle="bold"
                android:text="Trịnh Xuân Nam | (+84)98612805"
                />
            <TextView
                android:id="@+id/dccuthe_user_mypay"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:textColor="#4c504f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textStyle="bold"
                android:text="Ngõ 1 phố Bùi Xương Trạch"
                />
            <TextView
                android:visibility="gone"
                android:id="@+id/dcquan_user_mypay"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:textColor="#4c504f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textStyle="bold"
                android:text="Quận Thanh Xuân Hà Nội"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/edit_user_mypay"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:textColor="#4c504f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text=">"
            />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/profile_pay"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:nestedScrollingEnabled="false"
        android:id="@+id/recyclerview_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/text_vanchuyen"
        android:textColor="#45dcc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerview_pay"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Đơn vị vận chuyển (nhấn để chọn)"
        />
    <RelativeLayout
        android:id="@+id/rela_gh"
        android:layout_below="@+id/text_vanchuyen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_giaohangnhanh"
            android:textColor="#4c504f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Giao hàng nhanh"
            />
        <TextView
            android:layout_below="@+id/text_giaohangnhanh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Giao hàng nhanh 1-3 ngày"
            />
        <TextView
            android:textColor="#000"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="đ15.100>"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_pttt"
        android:layout_below="@+id/rela_gh"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#4c504f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Phương thức thanh toán"
                />
            <TextView
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:textColor="#4c504f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="Thanh toán khi nhận hàng >"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#4c504f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="Tổng tiền hàng"
                />

            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:textColor="#4c504f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="đ"
                    />
                <TextView
                    android:id="@+id/text_sumcash_mypay"
                    android:textColor="#4c504f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="445000"
                    />
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#4c504f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="Tổng tiền phí vận chuyển"
                />

            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#4c504f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="đ"
                    />
                <TextView
                    android:id="@+id/text_cashmove_mypay"
                    android:textColor="#4c504f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="30.200"
                    />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#4c504f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Tổng thanh toán"
                />

            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#ff0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="đ"
                    />
                <TextView
                    android:id="@+id/text_sumall_mypay"
                    android:textColor="#ff0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="475000"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
        <Button
            android:id="@+id/btn_dathang_Mypay"
            android:layout_below="@+id/ll_pttt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text= "Đặt Hàng"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#f7681b"
            />
    </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>